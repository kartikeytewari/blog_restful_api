<%- include("partials/header") %>

<div class="ui main text container segment">
    <div class="ui huge header">Edit <%= blog.title %> </div>
    <form class="ui form" action="/blogs/<%= blog.id %>?_method=PUT" method="POST">
        <div class="field">
            <label>Title</label>
            <input type="text" required name="blog[title]" value= "<%= blog.title %>" >
        </div>

        <div class="field">
            <label>Image</label>
            <input type="text" name="blog[image]" value="<%= blog.image %>" >
        </div>
        
        <div class="field">
            <label>Content</label>
            <textarea required name="blog[body]" cols="30" rows="10"> <%= blog.body %> </textarea>
        </div>
        
        <button class="ui primary basic button">Edit</button>
    </form>
</div>

<%- include("partials/footer") %>